# =============================================
# MONOREPO ROOT ENVIRONMENT VARIABLES
# =============================================
# This file contains shared environment variables for all apps in the monorepo.
# Copy this file to .env and fill in your actual values.
# Individual apps can override these values with their own .env.local files.

# =============================================
# DATABASE
# =============================================
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# =============================================
# NEXT AUTH (Shared across all apps)
# =============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"

# App-specific URLs (override in app .env.local if different)
NEXTAUTH_URL="http://localhost:3000"

# =============================================
# OAUTH PROVIDERS
# =============================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# =============================================
# PAYMENT GATEWAY
# =============================================
RAZORPAY_KEY_SECRET="your-razorpay-secret"
NEXT_PUBLIC_RAZORPAY_KEY_ID="your-razorpay-key-id"

# =============================================
# EMAIL SERVICE
# =============================================
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@yourdomain.com"

# =============================================
# SHIPPING
# =============================================
SHIP_ROCKET_AUTH_KEY="your-shiprocket-auth-key"
SHIPROCKET_PASSWORD="your-shiprocket-password"
SHIPROCKET_EMAIL="your-shiprocket-email"

# =============================================
# AWS (Optional - Uncomment if needed)
# =============================================
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_BUCKET="your-bucket-name"
# NEXT_PUBLIC_AWS_URL_PREFIX="https://your-bucket.s3.amazonaws.com"

# =============================================
# PUBLIC CLIENT VARIABLES
# =============================================
NEXT_PUBLIC_USER="user"
NEXT_PUBLIC_PROFESSIONAL="professional"
NEXT_PUBLIC_GST="18"
NEXT_PUBLIC_PLATFORM_FEE="5"

# =============================================
# ENVIRONMENT
# =============================================
NODE_ENV="development"
